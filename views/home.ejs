            </div>
            <!-- /.col-md-4 -->
        </div>
        <!-- /.row -->

        <hr>

        <!-- Call to Action Well -->
        <div class="row">
            <div class="col-lg-12">
                <div class="well text-center">
                    <h2> <%= lang.ui.SAMPLE_SECTION_TITLE %> </h2>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <div class="col-md-4">
                <h2> <%= lang.ui.SAMPLE_EX1_TITLE %></h2>
                <p> <%= lang.ui.SAMPLE_EX1_DESC %> </p>
                <a class="btn btn-primary btn-lg" href="/challenges/exercise1" target="_blank"> <%= lang.ui.GO %> </a>
            </div>            <!-- /.col-md-4 -->
            <div class="col-md-4">
                <h2> <%= lang.ui.SAMPLE_EX2_TITLE %> </h2>
                <p> <%= lang.ui.SAMPLE_EX2_DESC %>  </p>
                <a class="btn btn-primary btn-lg" href="/challenges/exercise2" target="_blank"> <%= lang.ui.GO %> </a>
            </div>         
            <div class="col-md-4">
                <h2> <%= lang.ui.SAMPLE_EX3_TITLE %> </h2>
                <p> <%= lang.ui.SAMPLE_EX3_DESC %> </p>
                <a class="btn btn-primary btn-lg" href="/challenges/no_restriction" target="_blank"> <%= lang.ui.GO %> </a>
            </div>                     
        </div>
        <!-- /.row -->

        <!-- Footer -->
        <%if (user.role=="admin"){%>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <div class="well text-center">
                        <h2> <%= lang.ui.ADMIN_SECTION_TITLE %> </h2>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-4">
                    <h2> <%= lang.ui.ADMIN_UPLOAD_TITLE %></h2>
                    <p> <%= lang.ui.ADMIN_UPLOAD_DESCRIPTION %> </p>
                    <!--<a class="btn btn-primary btn-lg" href="/challenges/cuestion1" target="_blank"> <%= lang.ui.GO %> </a>-->
                    <% include partials/upload-form %>  
                </div>            <!-- /.col-md-4 -->
                <div class="col-md-4">
                    <h2> <%= lang.ui.ADMIN_MONITOR_TITLE %></h2>
                    <p> <%= lang.ui.ADMIN_MONITOR_DESCRIPTION %> </p>
                    <a class="btn btn-primary btn-lg" href="/monitor/users" target="_blank"> <%= lang.ui.GO %> </a>
                    
                </div>            <!-- /.col-md-4 -->

            </div>        <!-- /.row -->
            
            
        <% } %>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright Â© Fernando Losilla 2016</p>
                </div>
            </div>
        </footer>

    </div>

