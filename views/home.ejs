<body>

    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <img class="img-responsive img-rounded" src="/img/router.png" alt="">
            </div>
            <!-- /.col-md-8 -->
            <div class="col-md-4">
                <form id="signout" action="/signout" method="post">
                     <input type="submit" value="<%=lang.ui.LOGOUT%>" name="submit">
                </form>

                <h2><strong>NetEval:</strong> <%= lang.ui.NETEVAL_DESCRIPTION %> </h2>
                <p>  <%= lang.ui.HOME_INSTRUCTIONS_P1 %> </p>
